<div class="article-container">
	<div id="article-primary">
		<% first_article = @articles.first %>
		
		<%= link_to(image_tag(first_article.image, :class => "img-primary-article"), first_article.link) %>
			<div id="primary-title-content">
				<h2> <%= link_to first_article.title, first_article.link %> </h2>
				<h3> <%= first_article.description %> </h3>
			</div>
    </div>
	
	<div class="container" id="all-articles">
	<hr>
	<% @articles.each do |article| %>
		<div class="row">
			<div class="col-md-4 col-lg-4">
				<h2> 
					<%= link_to article.title, article.link %>  
				</h2>
			
				<%= link_to(image_tag(article.image), article.link) %>
				<p> <%= article.description %> </p>
				<p> <%= article.created_at %> </p>
			</div>

			<div class="col_md-3 col-lg-3">
				<img src= <% article.image %> >
			</div>
		</div>
	<% end %>
	</div>
</div>

<%= link_to "logout", destroy_user_session_path, method: :delete %>s
